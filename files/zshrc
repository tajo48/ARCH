# ~/.zshrc
# Find and set branch name var if in git repository.
function git_branch_name()
{
  branch=$(git symbolic-ref HEAD 2> /dev/null | awk 'BEGIN{FS="/"} {print $NF}')
  if [[ $branch == "" ]];
  then
    :
  else
    echo '- ('$branch')'
  fi
}

# Enable substitution in the prompt.
setopt prompt_subst


# alias v="nvim"
alias x="sh ~/ARCH/files/wallpaper.sh && startx"
alias rmwal="rm -rf ~/.cache/wal/schemes/"
alias p="ping google.com"
alias u="sh ~/ARCH/files/upgradefiles.sh"
alias suicide="poweroff"
alias gita="git add -A && git commit -m 'update' && git push"
alias pacre="sudo rm /var/lib/pacman/db.lck"
alias BTW="neofetch"
alias btw="neofetch"
alias notflix="sh ~/ARCH/files/notflix.sh"
alias wifi="sudo wifi-menu"
alias gitclonearch = "git clone https://github.com/tajo48/ARCH.git"

# Config for prompt. PS1 synonym.
prompt='%2/ $(git_branch_name) > '



alias arch-install="sh ARCH/install.sh"

